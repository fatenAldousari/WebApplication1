<head>
    <title>Add Employee</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            color: #333;
            margin: 20px;
        }

        h2 {
            color: #006400;
            text-align: center;
            margin-top: 0;
            padding-top: 10px;
        }

        form {
            width: 50%;
            margin: 20px auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
        }

        input[type="text"], input[type="email"] {
            width: calc(100% - 22px);
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

        button {
            background-color: #006400;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

            button:hover {
                background-color: #004d00;
            }
    </style>
</head>

    <h2>Add Employee</h2>
    @model AddEmployeeForm
    @using (Html.BeginForm("AddEmployee", "BankBranch", FormMethod.Post))
    {
        <form>
            @Html.EditorForModel()
            <button class="btn btn-primary" type="AddEmployee">AddEmployee</button>
        </form>
    }

