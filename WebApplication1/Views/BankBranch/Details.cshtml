<!DOCTYPE html>
<html>
<head>
    <title>Branch Details</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            color: #006400;
            margin: 20px;
        }

        h1 {
            color: #006400;
            background-color: #fff;
            padding: 10px;
            margin-top: 0;
            text-align: center;
        }

        table {
            width: 50%;
            margin: 20px auto;
            border-collapse: collapse;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #006400;
        }

        th {
            background-color: #fff;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr:last-child td {
            border-bottom: none;
        }

        .add-employee-link {
            text-align: center;
        }
    </style>
</head>
<body>
    <h1>Branch Details</h1>
    <table>
        <tr>
            <th>Name</th>
            <td>@Model.LocationName</td>
        </tr>
        <tr>
            <th>Branch Manager</th>
            <td>@Model.BranchManager</td>
        </tr>
        <tr>
            <th>Employee Count</th>
            <td>@Model.EmployeeCount</td>
        </tr>
    </table>

    <div class="add-employee-link">
        <a href="/BankBranch/AddEmployee/@Model.Id">Add Employee</a>
    </div>

    <h2>Employees</h2>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Bank Branch</th>
                <th>Position</th>
                <th>Civil ID</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model.Employees)
            {
                <tr>
                    <td>@e.Name</td>
                    <td>@e.BankBranch.LocationName</td>
                    <td>@e.Position</td>
                    <td>@e.CivilId</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
